<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileActivity">

    <ImageView
        android:id="@+id/octopus_image_view"
        android:layout_width="88dp"
        android:layout_height="89dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/unicorn_image_view"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/crab_image_view"
        android:layout_width="88dp"
        android:layout_height="89dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toStartOf="@+id/unicorn_image_view"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/alien_image_view"
        android:layout_width="88dp"
        android:layout_height="89dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="27dp"
        app:layout_constraintStart_toEndOf="@+id/unicorn_image_view"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="8dp"
        android:text="Choose profile picture:"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/unicorn_image_view"
        android:layout_width="88dp"
        android:layout_height="89dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/robot_image_view"
        android:layout_width="88dp"
        android:layout_height="89dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toStartOf="@+id/octopus_image_view"
        app:layout_constraintTop_toBottomOf="@+id/crab_image_view"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/frog_image_view"
        android:layout_width="88dp"
        android:layout_height="89dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="21dp"
        app:layout_constraintStart_toEndOf="@+id/octopus_image_view"
        app:layout_constraintTop_toBottomOf="@+id/alien_image_view"
        tools:srcCompat="@tools:sample/avatars" />

    <EditText
        android:id="@+id/new_name_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="Pick up a new nick name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/octopus_image_view" />

    <Button
        android:id="@+id/save_new_name_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_name_edit_text" />
</android.support.constraint.ConstraintLayout>